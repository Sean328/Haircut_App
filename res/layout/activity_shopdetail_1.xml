<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
   <TextView 
	         android:id="@+id/shop_name"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:background="#ffffff"
	         android:gravity="center_vertical"
	         android:layout_marginTop="1dp"
	         android:text="  商店名称"
	         android:padding="10dp"
	         android:textSize="20sp"
	         android:textColor="@color/gray"/>
   
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="1dp"
       android:background="#ffffff"
       android:orientation="horizontal">
       
        <TextView 
	         android:id="@+id/shop_ranks"
	         android:layout_width="0dp"
	         android:layout_height="wrap_content"
	         android:layout_weight="1"
	         android:gravity="center_vertical"
	         android:text="评分:"
	         android:padding="10dp"
	         android:textSize="16sp"
	         android:textColor="@color/gray"/>
        
        <RatingBar
            android:id="@+id/rb_score"
            style="@style/custom_ratingbar_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />
        
        <TextView
            android:id="@+id/tv_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="分数"
            android:textColor="@color/red"
            android:textSize="13sp" />
       
       
   </LinearLayout>
   
   
      <TextView 
	         android:id="@+id/shoplocation"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:background="#ffffff"
	         android:gravity="center_vertical"
	          android:layout_marginTop="2dp"
	         android:text="南昌市高新区紫阳大道114号"
	         android:padding="10dp"
	         android:textSize="14sp"
	         android:textColor="@color/gray"
	         android:drawableLeft="@drawable/salon_detail_location"
	         android:drawablePadding="14dp"/>
   
   
   <TextView 
	         android:id="@+id/shop_fastcut"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:background="#ffffff"
	         android:gravity="center_vertical"
	         android:layout_marginTop="1dp"
	         android:text="  是否支持快剪"
	         android:padding="10dp"
	         android:textSize="16sp"
	         android:textColor="@color/gray"/>
   
   <TextView 
	         android:id="@+id/shop_open_time"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:background="#ffffff"
	         android:gravity="center_vertical"
	         android:layout_marginTop="1dp"
	         android:text="  营业时间"
	         android:padding="10dp"
	         android:textSize="16sp"
	         android:textColor="@color/gray"/>
 
   
   <TextView 
	         android:id="@+id/shop_tel"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:background="#ffffff"
	         android:gravity="center_vertical"
	          android:layout_marginTop="2dp"
	         android:text="电话号码"
	         android:padding="10dp"
	         android:textSize="16sp"
	         android:textColor="@color/gray"
	         android:drawableRight="@drawable/phone_detail"
	         android:drawablePadding="14dp"/>
	 
	     <LinearLayout 
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="10dp"
	         android:orientation="horizontal"
	         android:background="#ffffff">
	         <TextView 
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="发型师团队"
	             android:textSize="18sp"
	             android:padding="8dp"/>
	         <TextView 
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:gravity="right"
	             android:text="人数：3"
	             android:paddingRight="10dp"
	             android:textColor="@color/gray"
	             android:textSize="12sp"/>
	         
	     </LinearLayout>
	     
	     <RadioGroup 
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:background="#ffffff"
	         android:layout_marginTop="2dp"
	         android:orientation="horizontal">
	         
	         <RadioButton 
	            android:id="@+id/lifashi1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:button="@null"
	            android:layout_gravity="center_vertical"
	            android:layout_weight="1"
	            android:drawableTop="@drawable/lifashi"
	            android:drawablePadding="5dp"
	            android:gravity="center"
	            android:text="张三"
	            android:textColor="@color/gray"
	            android:textSize="14sp"
	            />
	         
	         <RadioButton 
	            android:id="@+id/lifashi2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:button="@null"
	            android:layout_gravity="center_vertical"
	            android:layout_weight="1"
	            android:drawableTop="@drawable/lifashi"
	            android:drawablePadding="5dp"
	            android:gravity="center"
	            android:text="李四"
	            android:textColor="@color/gray"
	            android:textSize="14sp"
	            />
	         
	         <RadioButton 
	            android:id="@+id/lifashi3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:button="@null"
	            android:layout_gravity="center_vertical"
	            android:layout_weight="1"
	            android:drawableTop="@drawable/lifashi"
	            android:drawablePadding="5dp"
	            android:gravity="center"
	            android:text="王五"
	            android:textColor="@color/gray"
	            android:textSize="14sp"
	            />
	         
	     </RadioGroup>

</LinearLayout>
