<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff" >
        
           
         <TextView
            android:id="@+id/imgback_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text=" 返回"
            android:drawableLeft="@drawable/common_toobar_icon_back"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="购买完成"
            android:textColor="@color/gray"
            android:textSize="20sp" />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hehe"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:background="#E9E9E9" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/zhifujieguo_chenggong" />

        <TextView
            android:id="@+id/haha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
 			android:layout_toRightOf="@+id/imageView1"
  			android:layout_marginTop="15dp"
            android:text="订单已完成！"
            android:textColor="@color/gray"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/haha"
            android:layout_toRightOf="@+id/imageView1"
            android:layout_marginLeft="5dp"
            android:text="任何意见和建议，都欢迎联系我们呀！！"
            android:textColor="@color/gray"
            android:textSize="18sp" />

    </RelativeLayout>
    
    <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/hehe"
            android:background="#ffffff" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#E9E9E9"
        android:layout_below="@+id/view">
        
        <TextView 
            android:id="@+id/back_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="返回首页"
            android:textColor="@color/orangered"
            android:textSize="20sp"/>
        
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/hehe"
            android:background="#fff" />
        
        <TextView 
            android:id="@+id/write_comments"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="我要评论"
            android:textColor="@color/orangered"
            android:textSize="20sp"/>
        
        
        
    </LinearLayout>

</RelativeLayout>
