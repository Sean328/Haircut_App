<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp" >

        <com.example.smart.SmartImageView
            android:id="@+id/cart_image"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:background="@android:color/darker_gray"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/tongyong" />

        <TextView
            android:id="@+id/cart_shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="42dp"
            android:layout_toRightOf="@+id/cart_name"
            android:text="商店名称"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cart_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cart_name"
            android:layout_alignParentBottom="true"
            android:text="价格"
            android:textColor="@color/orangered"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/orders_shopName"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/cart_image"
            android:text="商品名称"
            android:textColor="#000"
            android:textSize="18sp" />

    </RelativeLayout>
    
</LinearLayout>
    
