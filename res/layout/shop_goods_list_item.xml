<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    
    <RelativeLayout 
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        
	    <com.example.smart.SmartImageView
        android:id="@+id/goods_smartImageView1"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:padding="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/tongyong" />

	    <Button
	        android:id="@+id/btn_buy"
	        android:layout_width="60dp"
	        android:layout_height="30dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="29dp"
	        android:background="@drawable/category_card_bg_juse"
	        android:text="购买"
	        android:focusable="false"  
			android:clickable="false"  
			android:focusableInTouchMode="false" 
	        android:textColor="#ffffff" />

	    <TextView
	        android:id="@+id/tv_jiage1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/goods_smartImageView1"
	        android:layout_marginLeft="16dp"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="5dp"
	        android:text="价格"
	        android:textColor="@color/orangered"
	        android:textSize="18sp" />

	    <TextView
	        android:id="@+id/tv_goods_title1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/tv_jiage1"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="10dp"
	        android:ellipsize="end"
	        android:maxLines="2"
	        android:text="商品名称"
	        android:textColor="#000"
	        android:textSize="18sp" />
    
    </RelativeLayout>
    
</LinearLayout>
    